<p id="notice"><%= notice %></p>
<div id="plant.<%= to_html_tag @plant.name %>">
  <p>
    <b>Name:</b>
    <%= @plant.name %>
  </p>

  <p>
    <b>Gattung</b>
    <%= @plant.family_name %>
  </p>

  <p>
    <b>Anforderung:</b>
    <%= @plant.energy %>
  </p>

  <p>
    <b>Aussaat</b>
    Zwischen  <%= nice_time(@plant.seed_from_month, @plant.seed_from_day) %>
    und  <%= nice_time(@plant.seed_to_month, @plant.seed_to_day) %>
  </p>

  <%= link_to 'Edit', edit_plant_path(@plant) %> |
  <%= link_to 'Back', plants_path %>
</div>